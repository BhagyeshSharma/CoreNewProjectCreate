@model Entity.Modal.Tbl_StudentVerification

<div>
    <h5>Student Details</h5>
    <p><strong>ID:</strong> @Model.StdVerifcnID</p>
    <p><strong>Name:</strong> @Model.StdVerifcnName</p>
    <p><strong>Email:</strong> @Model.StdVerifcnEmail</p>
    <p><strong>Mobile No.:</strong> @Model.StdVerifcnMobileNo</p>
    <hr />
    <p>Are you sure you want to verify <strong>@Model.StdVerifcnName</strong>?</p>

    <form method="post" asp-action="VerifyStudent" asp-controller="StudentVerfication">
        <input type="hidden" name="id" value="@Model.StdVerifcnID" />
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Verified</button>
        </div>
    </form>
</div>
