@model Entity.ViewModal.UserFormModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-white">
                        <h4 class="mb-0">User Register</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="SubmitForm">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="UserName" class="form-label">Name:</label>
                                    <input type="text" id="UserName" autocomplete="off" placeholder="Enter Name" name="UserName" class="form-control" value="@Model.UserName" />
                                </div>
                                <div class="col-md-5">
                                    <label for="UserEmail" class="form-label">Email:</label>
                                    <input type="email" id="UserEmail" autocomplete="off" placeholder="Enter Email" name="UserEmail" class="form-control" value="@Model.UserEmail" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h5 class="border-bottom pb-2">Address Details</h5>
                                    <partial name="AddressPartial" model="Model.UserAddressModel" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h5 class="border-bottom pb-2">Contact Details</h5>
                                    <partial name="ContactPartial" model="Model.UserContactModel" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Data Grid Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">User Details</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-warning">
                            <tr>
                                <th>S.No.</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Street</th>
                                <th>City</th>
                                <th>ZipCode</th>
                                <th>Phone</th>
                                <th>Emergency Contact</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Userlist != null && Model.Userlist.Any())
                            {
                                int count = 1;
                                foreach (var user in Model.Userlist)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@user.UserName</td>
                                        <td>@user.UserEmail</td>
                                        <td>@user.UserAddressModel.Street</td>
                                        <td>@user.UserAddressModel.City</td>
                                        <td>@user.UserAddressModel.ZipCode</td>
                                        <td>@user.UserContactModel.Phone</td>
                                        <td>@user.UserContactModel.EmergencyContact</td>
                                        <td>
                                            <!-- Edit Button -->
                                            <form method="post" asp-action="Edit">
                                                <input type="hidden" name="id" value="@user.UserId" />
                                                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                                            </form>
                                        </td>
                                        <td>
                                            <!-- Delete Button -->
                                            <form method="post" asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                <input type="hidden" name="id" value="@user.UserId" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center">No records found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>