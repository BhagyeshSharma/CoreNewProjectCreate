@model IEnumerable<Entity.ViewModal.BookTransactionViewModel>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
@{
    var message = TempData["Message"] as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h2>Available Books</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    @if (book.IsAvailable)
                    {
                        <span class="text-success">
                            <i class="fa fa-check-circle"></i> Available
                        </span>
                    }
                    else
                    {
                        <span class="text-danger">
                            <i class="fa fa-times-circle"></i> Borrowed
                        </span>
                    }
                </td>
                <td>
                    @if (book.IsAvailable)
                    {
                        <form method="post" action="@Url.Action("BorrowBook", "LibraryBooks")">
                            <input type="hidden" name="bookId" value="@book.Book_Id" />
                            <input type="hidden" name="studentId" value="1" /> <!-- Assuming student Id -->
                            <button type="submit" class="btn btn-primary">Borrow</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" action="@Url.Action("ReturnBook", "LibraryBooks")">
                            <input type="hidden" name="transactionId" value="@book.TransactionId" /> <!-- Example transaction Id -->
                            <button type="submit" class="btn btn-success">Return</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

