<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewCoreApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewCoreApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:red" asp-area="" asp-controller="Home" asp-action="Index">NewCoreApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item bt" style="margin-left:4px";>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="EmployeeRegistration" asp-action="Create">Employee Registration</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="StudentRegistration" asp-action="Create">Student Registration</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="DivisionDistrictBlock" asp-action="Create">User Location Registration</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="DivisionDistrictBlock" asp-action="FileGrid">User Wise Location Details</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="Attendance" asp-action="Index">Student Daily Attendance Entry</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="StudentVerfication" asp-action="StudentVerification">Student Verification</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="LibraryBooks" asp-action="Librarybooks">Library Books Manage</a>
                        </li>
                        <li class="nav-item" style="margin-left:4px" ;>
                            <a class="btn btn-success" style="color:white" asp-area="" asp-controller="UserForm" asp-action="Index">User Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NewCoreApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
